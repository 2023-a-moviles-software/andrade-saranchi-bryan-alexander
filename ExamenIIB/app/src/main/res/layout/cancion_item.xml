<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Id" />

        <TextView
            android:id="@+id/tv_cancionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_cancionId"
            app:layout_constraintTop_toBottomOf="@+id/tv_cancionId"
            tools:text="Eres mia" />

        <TextView
            android:id="@+id/tv_cancionArtista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cancionName"
            app:layout_constraintStart_toEndOf="@+id/tv_cancionName"
            app:layout_constraintTop_toTopOf="@+id/tv_cancionName"
            tools:text="Romeo Santos" />

        <TextView
            android:id="@+id/tv_cancionAnioLanzamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="2001"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cancionArtista"
            app:layout_constraintStart_toEndOf="@+id/tv_cancionArtista"
            app:layout_constraintTop_toTopOf="@+id/tv_cancionArtista"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_cancionDuracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:text="2.11"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cancionAnioLanzamiento"
            app:layout_constraintStart_toEndOf="@+id/tv_cancionAnioLanzamiento"
            app:layout_constraintTop_toTopOf="@+id/tv_cancionAnioLanzamiento"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
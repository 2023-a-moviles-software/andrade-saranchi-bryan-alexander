<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_cancion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="20dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="240dp">


        <ImageView
            android:id="@+id/item_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:background="@color/black" />

        <TextView
            android:id="@+id/tv_nombre_cancion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_image"
            android:layout_alignStart="@+id/item_image"
            android:layout_alignEnd="@+id/item_image"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="7dp"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:text="Maneater" />

        <TextView
            android:id="@+id/tv_artista_cancion"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@+id/tv_nombre_cancion"
            android:layout_alignStart="@+id/tv_nombre_cancion"
            android:layout_alignEnd="@+id/tv_nombre_cancion"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="7dp"
            android:text="TextView"
            android:textColor="#969191"
            android:textSize="10sp"
            tools:text="Daryl Hall y John Oates" />

        <Button
            android:id="@+id/boton_apple_item"
            android:layout_width="44dp"
            android:layout_height="22dp"
            android:layout_below="@+id/tv_artista_cancion"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="99dp"
            android:backgroundTint="#000000"
            android:paddingLeft="8dp"
            android:paddingTop="1dp"
            android:paddingRight="2dp"
            android:paddingBottom="1dp"
            android:text="Music"
            android:textColor="#FAFAFA"
            android:textColorHighlight="#F4F2F2"
            android:textColorHint="#000000"
            android:textSize="8dp" />

        <ImageView
            android:id="@+id/imgv_apple"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignStart="@+id/boton_apple_item"
            android:layout_alignTop="@+id/boton_apple_item"
            android:layout_alignBottom="@+id/boton_apple_item"
            android:layout_marginStart="0dp"
            android:paddingLeft="5dp"
            app:srcCompat="@drawable/icono_apple" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
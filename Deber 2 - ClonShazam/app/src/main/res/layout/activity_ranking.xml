<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankingActivity">

    <TextView
        android:id="@+id/tv_ranking_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ranking"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgv_mapamundi"
        android:layout_width="411dp"
        android:layout_height="204dp"
        android:layout_marginTop="10dp"
        android:background="#6E5599"
        app:layout_constraintEnd_toEndOf="@+id/tv_ranking_activity"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/tv_ranking_activity"
        app:layout_constraintTop_toBottomOf="@+id/tv_ranking_activity"
        app:srcCompat="@drawable/mapamundi"
        tools:srcCompat="@drawable/mapamundi" />

    <Button
        android:id="@+id/button"
        android:layout_width="279dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#FAFAFA"
        android:text="PaÃ­ses y ciudades"
        android:textColor="#6D5795"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imgv_mapamundi"
        app:layout_constraintStart_toStartOf="@+id/imgv_mapamundi"
        app:layout_constraintTop_toTopOf="@+id/imgv_mapamundi" />

    <TextView
        android:id="@+id/tv_mapamundi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ALREDEDOR DEL MUNDO"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rankings"
        android:layout_width="413dp"
        android:layout_height="448dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgv_mapamundi"
        app:layout_constraintTop_toBottomOf="@+id/imgv_mapamundi" />

</androidx.constraintlayout.widget.ConstraintLayout>
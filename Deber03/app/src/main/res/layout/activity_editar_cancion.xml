<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarCancion">

    <TextView
        android:id="@+id/tv_titulo_editar_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Cancion"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <EditText
        android:id="@+id/input_nuevo_nombre_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_nuevo_nombre_cancion"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/tv_nuevo_nombre_cancion"
        app:layout_constraintTop_toBottomOf="@+id/tv_nuevo_nombre_cancion" />

    <TextView
        android:id="@+id/tv_nuevo_nombre_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Nombre de la Cancion"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo_editar_cancion"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo_editar_cancion"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_editar_cancion" />

    <TextView
        android:id="@+id/tv_nuevo_artista_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Artista"
        app:layout_constraintEnd_toEndOf="@+id/input_nuevo_nombre_cancion"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/input_nuevo_nombre_cancion"
        app:layout_constraintTop_toBottomOf="@+id/input_nuevo_nombre_cancion" />

    <EditText
        android:id="@+id/input_nuevo_artista_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_nuevo_artista_cancion"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/tv_nuevo_artista_cancion"
        app:layout_constraintTop_toBottomOf="@+id/tv_nuevo_artista_cancion" />

    <TextView
        android:id="@+id/tv_nueva_duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Duracion"
        app:layout_constraintEnd_toEndOf="@+id/input_nuevo_artista_cancion"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/input_nuevo_artista_cancion"
        app:layout_constraintTop_toBottomOf="@+id/input_nuevo_artista_cancion" />

    <EditText
        android:id="@+id/input_nueva_duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_nueva_duracion"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/tv_nueva_duracion"
        app:layout_constraintTop_toBottomOf="@+id/tv_nueva_duracion" />

    <TextView
        android:id="@+id/tv_nuevo_añp_lanzamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Año de lanzamiento"
        app:layout_constraintEnd_toEndOf="@+id/input_nueva_duracion"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/input_nueva_duracion"
        app:layout_constraintTop_toBottomOf="@+id/input_nueva_duracion" />

    <EditText
        android:id="@+id/input_nuevo_año_lanzamiento_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_nuevo_añp_lanzamiento"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/tv_nuevo_añp_lanzamiento"
        app:layout_constraintTop_toBottomOf="@+id/tv_nuevo_añp_lanzamiento" />

    <Button
        android:id="@+id/btn_guardar_nuevos_cambios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/boton"
        android:text="Guardar cambios"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/input_nuevo_año_lanzamiento_cancion"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/input_nuevo_año_lanzamiento_cancion"
        app:layout_constraintTop_toBottomOf="@+id/input_nuevo_año_lanzamiento_cancion" />
</androidx.constraintlayout.widget.ConstraintLayout>